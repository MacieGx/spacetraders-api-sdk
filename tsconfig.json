{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "ES5",
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "removeComments": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}